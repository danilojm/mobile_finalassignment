<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="buttonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textSize">22dp</item>
        <item name="android:width">130dp</item>
        <item name="android:height">70dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">"@font/googlefont"</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="buttonLogin" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textSize">23sp</item>
        <item name="android:width">300dp</item>
        <item name="android:height">50dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">"@font/googlefont"</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="buttonBack" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:width">60dp</item>
        <item name="android:height">70dp</item>
        <item name="android:textSize">1sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">"@font/googlefont"</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="textField" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:width">300sp</item>
        <item name="android:height">60sp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">"@font/googlefont"</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

</resources>